{
	"name": "@browserfs/fs-dom",
	"version": "0.0.2",
	"description": "DOM backends for BrowserFS",
	"main": "dist/index.js",
	"types": "dist",
	"keywords": [
		"filesystem",
		"node",
		"storage"
	],
	"type": "module",
	"homepage": "https://github.com/browser-fs/fs-dom",
	"author": "dr-vortex <jp@drvortex.dev>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/browser-fs/fs-dom.git"
	},
	"bugs": {
		"url": "https://github.com/browser-fs/fs-dom/issues"
	},
	"engines": {
		"node": ">= 18"
	},
	"exports": {
		"./*": "./dist/*"
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*"
			]
		}
	},
	"scripts": {
		"format": "prettier --write src",
		"format:check": "prettier --check src",
		"lint": "eslint src",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules npx jest",
		"build": "node scripts/build.mjs",
		"build:docs": "typedoc --out docs --name BrowserFS src/index.ts",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@jest/globals": "^29.5.0",
		"@types/jest": "^29.5.1",
		"@types/node": "^14.18.62",
		"@typescript-eslint/eslint-plugin": "^5.55.0",
		"@typescript-eslint/parser": "^5.55.0",
		"archiver": "~2.1.1",
		"buffer": "~5.1.0",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.18",
		"esbuild-plugin-polyfill-node": "^0.3.0",
		"eslint": "^8.36.0",
		"jest": "^29.5.0",
		"path": "^0.12.7",
		"prettier": "^2.8.7",
		"ts-jest": "^29.1.0",
		"typedoc": "^0.25.1",
		"typescript": "5.2.2"
	},
	"dependencies": {
		"@browserfs/core": "^0.0.8"
	}
}
